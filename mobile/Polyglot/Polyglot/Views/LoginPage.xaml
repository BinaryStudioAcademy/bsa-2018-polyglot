<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Polyglot.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Polyglot!" HorizontalOptions="Center" FontSize="20" Margin="0,40,0,40"/>
            <Entry   Placeholder="login" x:Name="Email" HorizontalOptions="Center"  WidthRequest="350" ></Entry>
            <Entry   Placeholder="password" IsPassword="True"   x:Name="Password" HorizontalOptions="Center" WidthRequest="350" ></Entry>
            <Button  HorizontalOptions="Center"  Text="Login" Clicked="Login_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>