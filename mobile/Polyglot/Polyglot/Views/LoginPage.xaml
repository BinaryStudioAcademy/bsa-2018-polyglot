<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Polyglot.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Welcome to Polyglot!" HorizontalOptions="Center" FontSize="20" Margin="0,0,0,25"/>
            <Entry  x:Name="Email" Placeholder="Email" HorizontalOptions="Center"  WidthRequest="320" ></Entry>
            <Entry  x:Name="Password" IsPassword="True" Placeholder="Password" HorizontalOptions="Center" WidthRequest="320" ></Entry>
            <StackLayout Orientation="Horizontal" Margin="0,10,0,0" HorizontalOptions="FillAndExpand">
                <ActivityIndicator x:Name="Spinner" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></ActivityIndicator>
                <Button x:Name="loginBtn" HorizontalOptions="CenterAndExpand" Text="Login" Clicked="Login_OnClicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>